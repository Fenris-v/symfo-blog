{% extends 'base_dashboard.html.twig' %}

{% block title %}История статей{% endblock %}

{% block h1 %}История статей{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-xl-8">
      <table class="table table-hover table-bordered">
        <thead class="thead-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Название</th>
          <th scope="col">Описание</th>
          <th scope="col">Просмотр</th>
        </tr>
        </thead>
        <tbody>
        {% for article in pagination %}
          <tr>
            <th scope="row">{{ article.id }}</th>
            <td>{{ article.props['title'] }}</td>
            <td>{{ article.article | striptags | truncate(150) }}</td>
            <td><a href="{{ path('app_article_history_detail', { id: article.id }) }}"><i class="fas fa-eye"></i></a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>

      {{ knp_pagination_render(pagination) }}
    </div>
  </div>
{% endblock %}
